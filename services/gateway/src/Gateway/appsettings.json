{
  "Jwt": {
    "Authority": "https://auth.local",
    "Audience": "ecommerce-api",
    "Issuer": "https://auth.local",
    "RequireHttpsMetadata": false
  },
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ]
      },
      "cart": {
        "ClusterId": "cart",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/cart" }
        ]
      },
      "orders": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      },
      "payments": {
        "ClusterId": "payments",
        "Match": {
          "Path": "/payments/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/payments" }
        ]
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/inventory" }
        ]
      },
      "query": {
        "ClusterId": "query",
        "Match": {
          "Path": "/query/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/query" }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "catalog": {
            "Address": "http://catalog:8080/"
          }
        }
      },
      "cart": {
        "Destinations": {
          "cart": {
            "Address": "http://cart:8080/"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orders": {
            "Address": "http://orders:8080/"
          }
        }
      },
      "payments": {
        "Destinations": {
          "payments": {
            "Address": "http://payments:8080/"
          }
        }
      },
      "inventory": {
        "Destinations": {
          "inventory": {
            "Address": "http://inventory:8080/"
          }
        }
      },
      "query": {
        "Destinations": {
          "query": {
            "Address": "http://query:8080/"
          }
        }
      }
    }
  }
}
